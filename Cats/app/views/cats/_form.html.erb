<form action="/cats/<%= @cat.id %>" method='POST'>
    <% if @cat.persisted? %>
    <input type='hidden' name='_method' value='patch'>   
    <%end%>
    <input type='text' name='name' placeholder="name" value="<%= @cat.name %>">
    <label for="color">Color</label>
    <select id='color' name='color' >
        <% Cat.colors.each do |color|%>
            <option value='<%= color %>' <%= "selected" if color == @cat.color %>><%= color %></option>
        <% end%>
    </select>
    
    <input type='radio' id="M" name='sex' value="M" <%= "checked" if (@cat.sex == "M") %>>
        <label for="M">Male</label>
    <input type='radio' id="F" name='sex' value="F" <%= "checked" if (@cat.sex == "F")%>>
        <label for="F">Female</label>
    <textarea name='description' placeholder="description"><%= @cat.description %></textarea>
    <input type='date' name='birth_date' value= "<%= @cat.birth_date %>">
    <input type = "submit">
    
</form>